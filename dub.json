        {
            "name"        : "linux",
            "platforms"   : ["linux"],
            "sourcePaths" : [ "source" ],
            "targetPath"  : "lib",
            "targetName"  : "ui",
            "targetType"  : "library",
            "versions"    : [ "LIB", "GLFW", "GLFW_33", "GL_32", "GL3" ],
            "dependencies":
            {
                "bindbc-glfw"   : { "path": "deps/bindbc-glfw" },
                "bindbc-opengl" : { "path": "deps/bindbc-opengl" },
                "glfw-d"        : { "path": "deps/glfw-d" },

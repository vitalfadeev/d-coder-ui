    "configurations": 
    [
        {
            "name"        : "windows",
            "platforms"   : ["windows"],
            "sourcePaths" : [ "source" ],
            "targetPath"  : "lib",
            "targetName"  : "ui",
            "targetType"  : "library",
            "versions"    : [ "DoubleBuffer", "LIB", "GLFW", "GLFW_33", "GL_32" ],
